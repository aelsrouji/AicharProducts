@model ProductDto
<form>
    @*<input asp-for="ProductId" hidden />*@
    <div class="container border p-3">
        <h1 class="text-info">Product Details</h1>
        <div class="row">
            <div class="col-2 text-primary text-uppercase">
                @Model.Name
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                Category: @Model.CategoryName
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                @Model.Description
            </div>
        </div>
        <div class="row">
            <img src="@Model.ImageUrl" alt="@Model.Name" style="width:300px;height:300px;" />

        </div>
        <div class="row">
            <div class="col-2">
                @string.Format("{0:c}", @Model.Price)
            </div>
        </div>
        <div class="row">
            <div class="col-2 offset-2">
                <a asp-action="Index" class="btn btn-primary form-control">Back</a>
            </div>
            <div class="col-2">
                <input type="submit" value="AddToCart" class="btn btn-info form-control" />
            </div>
        </div>
    
    </div>
</form>