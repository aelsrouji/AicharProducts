@model IEnumerable<ProductDto>
</br>
    <div class="container p-4 border">
        <div class="row pb-2">
            <div class="col">
                <h1>Products List</h1>
                <div class="col text-end pt-1">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus">Create New Product</i>
                    </a>

                </div>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category Name</th>
                    <th>Prrice</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>

                        @item.Name
                    </td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        @(item.Price.ToString("c"))
                        </td>
                    <td>
                        <a asp-action="Edit" asp-route-productId="@item.ProductId" class="btn btn-success">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-productId="@item.ProductId" class="btn btn-danger">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                </tr>
                }
            </tbody>

        </table>
    </div> 